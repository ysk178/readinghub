<div class="contents row">
  <% @books.each do |book| %>
    <div class="content_post" style="background-image: url(<%= book.image %>);">
      <%= book.title %>
      <%= book.author %>
      <p><%= book.text %></p>
      <span class="name">
        <%= "name" %>
      </span>
    </div>
  <% end %>
</div>