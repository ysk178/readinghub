<div class="contents row">
  <div class="content_post" style="background-image: url(<%= @book.image %>);">
    <% if user_signed_in? && current_user.id == @tweet.user_id %>
      <div class="more">
        <span><%= image_tag 'arrow_top.png' %></span>
        <ul class="more_list">
          <li>
            <%= link_to '編集', edit_book_path(@book.id), method: :get %>
          </li>
          <li>
            <%= link_to '削除', book_path(@book.id), method: :delete %>
          </li>
        </ul>
      </div>
    <% end %>
    <%= @book.title %>
    <%= @book.author %>
    <p><%= @book.text %></p>
    <span class="name">
      <a href="/users/<%= @book.user.id %>">
        <span>投稿者</span><%= @book.user.nickname %>
      </a>
    </span>
  </div>
</div>